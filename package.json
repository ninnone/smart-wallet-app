{
  "name": "finalfiwebarch",
  "version": "1.0.0",
  "scripts": {
    "start": "serve ./public",
    "build": "npm run prepare:build && npm run build:css && npm run copy:assets",
    "prepare:build": "node -e \"const fs=require('fs');const path=require('path');const dir=path.join(__dirname,'public','assets','css');if(!fs.existsSync(dir)){fs.mkdirSync(dir,{recursive:true});}\"",
    "build:css": "npx tailwindcss -i ./configs/input.css -o ./public/assets/css/main.css --minify",
    "copy:assets": "node scripts/copy-assets.js",
    "dev": "npx tailwindcss -i ./configs/input.css -o ./public/assets/css/main.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.18",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "chart.js": "^4.5.1"
  }
}
